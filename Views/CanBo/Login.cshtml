
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <main id="main">
        <!-- ======= Intro Single ======= -->
        <section class="intro-single">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 col-lg-8">
                        <div class="title-single-box">
                            <h1 class="title-single">Đăng nhập</h1>
                            <span class="color-text-a">Trang đăng nhập dành cho cán bộ, công chức.</span>
                            @if (TempData["message"] != null)
                            {
                                <br>
                                <span class="color-text-a" style="color: red;">@TempData["message"]!</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </section><!-- End Intro Single-->
        <!-- ======= Contact Single ======= -->
        <section class="contact">
            <div class="container">
                <div class="row">
                    <div class="col-sm-12 section-t8">
                        <div class="row">
                            <div class="col-md-4 section-md-t3">
                            </div>
                            <div class="col-md-5">
                                @using (Html.BeginForm("frmLogin", "CanBo", FormMethod.Post))
                                {
                                    <div class="row">
                                        <div class="col-md-12 mb-3">
                                            <div class="form-group">
                                                <input type="text" name="MaCB" class="form-control form-control-lg form-control-a" placeholder="Nhập mã cán bộ" required>
                                            </div>
                                        </div>
                                        <div class="col-md-12 mb-3">
                                            <div class="form-group">
                                                <input type="password" name="MatKhau" class="form-control form-control-lg form-control-a" placeholder="Nhập mật khẩu" required>
                                            </div>
                                        </div>
                                        <div class="col-md-12 text-center">
                                            <button type="submit" class="btn btn-success">Đăng nhập</button>
                                        </div>
                                    </div>
                                }
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </section><!-- End Contact Single-->

    </main>

